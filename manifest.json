{
  "name": "Chrometrast",
  "description": "Make text black again",
  "icons": {
             "16": "icon16.png",
            "128": "icon128.png",
            "256": "icon256.png"
           },
  "version": "1.6",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "blackify": {
      "suggested_key": {
          "default": "Ctrl+Shift+B",
          "mac": "Command+Shift+B"
      },
      "description": "Blackify"
    },
    "unblackify": {
      "suggested_key": {
          "default": "Alt+Shift+B",
          "mac": "Alt+Shift+B"
      },
      "description": "Unblackify"
    }
  },
  "browser_action": {
    "default_title": "Blackify text"
  },
  "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["blackify.js"],
        "run_at": "document_end"
        }
    ], 
  "manifest_version": 2
}
